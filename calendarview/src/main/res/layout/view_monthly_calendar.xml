<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <com.zapplications.calendarview.customview.QuickSelectionBarLayout
        android:id="@+id/clQuickSelectionBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="12dp" />

    <com.zapplications.calendarview.customview.MonthlyCalendarHeaderView
        android:id="@+id/viewCalendarHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical" />

    <com.zapplications.calendarview.customview.DaysOfWeekView
        android:id="@+id/viewDaysOfWeekTitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <com.zapplications.calendarview.customview.MonthView
        android:id="@+id/viewMonthGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:itemCount="35"
        tools:listitem="@layout/layout_month_grid_item" />
</merge>